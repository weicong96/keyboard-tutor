generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model KeyboardLayout {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  modifiedAt DateTime @updatedAt

  layers Layer[]
}

model Layer {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  modifiedAt DateTime @updatedAt

  parentLayout     KeyboardLayout? @relation(fields: [keyboardLayoutId], references: [id])
  keyboardLayoutId String?
  keys             Key[]
}

model Key {
  id         String   @id @default(uuid())
  key        String
  row        Int
  column     Int
  createdAt  DateTime @default(now())
  modifiedAt DateTime @updatedAt

  layer   Layer?  @relation(fields: [layerId], references: [id])
  layerId String?
}
